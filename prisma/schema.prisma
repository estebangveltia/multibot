generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String   @id @default(uuid())
  nombre    String
  createdAt DateTime @default(now())
  usuarios  Usuario[]
  contextos Contexto[]
}

model Usuario {
  id        String   @id
  email     String   @unique
  rol       Rol
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  createdAt DateTime @default(now())
  auditoria AuditoriaUsuario[]
}

model Contexto {
  id        String   @id @default(uuid())
  nombre    String
  contenido String
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  createdAt DateTime @default(now())
}

model AuditoriaUsuario {
  id         String   @id @default(uuid())
  id_usuario String
  id_tenant  String
  accion     Accion
  fecha      DateTime @default(now())
  usuario    Usuario  @relation(fields: [id_usuario], references: [id])
}

enum Rol {
  superadmin
  admin_empresa
  usuario_empresa
}

enum Accion {
  login
  logout
}
