<h1>Nueva opción de menú <%= tenant ? ('- ' + tenant.name) : '' %></h1>

<form method="POST" action="/app/menus" style="max-width: 420px;">
  <div class="form-group">
    <label>Opción (1..10)</label>
    <input type="number" min="1" max="10" name="opcion_num" required />
  </div>
  <div class="form-group">
    <label>Label</label>
    <input name="label" required />
  </div>
  <div class="form-group">
    <label>Response</label>
    <textarea name="response" required></textarea>
  </div>
  <button class="btn" type="submit">Guardar</button>
</form>
