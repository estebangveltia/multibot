<h1>Menús <%= tenant ? ('- ' + tenant.name) : '' %></h1>

<% if (currentUser.role === 'VIEWER') { %>
  <span class="btn disabled" title="Solo lectura">+ Nueva opción</span>
<% } else { %>
  <a href="/app/menus/new" class="btn">+ Nueva opción</a>
<% } %>

<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Label</th>
      <th>Response</th>
    </tr>
  </thead>
  <tbody>
    <% menus.forEach(m => { %>
      <tr>
        <td><%= m.opcion_num %></td>
        <td><%= m.label %></td>
        <td><%= m.response %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
