<h1>Usuarios</h1>

<a href="/super/users/new" class="btn">+ Nuevo usuario</a>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Nombre</th>
      <th>Rol</th>
      <th>Tenant</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(u => { %>
      <tr>
        <td><%= u.id %></td>
        <td><%= u.email %></td>
        <td><%= u.name %></td>
        <td><%= u.role %></td>
        <td><%= u.tenants ? u.tenants.name : '' %></td>
        <td>
          <form method="POST" action="/super/users/<%= u.id %>?_method=DELETE" style="display:inline;">
            <button class="btn" type="submit" onclick="return confirm('Eliminar usuario?');">Eliminar</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
