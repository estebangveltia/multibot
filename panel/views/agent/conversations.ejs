<h1>Conversaciones</h1>
<form method="GET" class="filters">
  <label>Desde <input type="date" name="from" value="<%= from %>"/></label>
  <label>Hasta <input type="date" name="to" value="<%= to %>"/></label>
  <label>Usuario <input type="text" name="user" value="<%= filters.user || '' %>" /></label>
  <label>Intent <input type="text" name="intent" value="<%= filters.intent || '' %>" /></label>
  <label><input type="checkbox" name="fallback" value="1" <%= filters.fallback === '1' ? 'checked' : '' %>> Solo fallbacks</label>
  <button class="btn" type="submit">Filtrar</button>
</form>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Usuario</th>
      <th>Fecha</th>
      <th>Estado</th>
      <th>Follow-up</th>
      <th>Resuelto por humano</th>
    </tr>
  </thead>
  <tbody>
    <% conversations.forEach(c => { %>
      <tr>
        <td><a href="/agent/conversations/<%= c.id %>"><%= c.id %></a></td>
        <td><%= c.username %></td>
        <td><%= c.createdAt.toISOString().substring(0,19) %></td>
        <td><%= c.status %></td>
        <td><%= c.requiresFollowup ? '✔' : '' %></td>
        <td><%= c.resolvedByHuman ? '✔' : '' %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
