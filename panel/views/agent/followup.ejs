<h1>Conversaciones para seguimiento</h1>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Usuario</th>
      <th>Fecha</th>
      <th>Estado</th>
    </tr>
  </thead>
  <tbody>
    <% conversations.forEach(c => { %>
      <tr>
        <td><a href="/agent/conversations/<%= c.id %>"><%= c.id %></a></td>
        <td><%= c.username %></td>
        <td><%= c.createdAt.toISOString().substring(0,19) %></td>
        <td><%= c.status %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
